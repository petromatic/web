{
  "rules": {
    "admin": {
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    },
    "users": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "root.child('admin').child(auth.uid).exists()",
      "$uid": {
        "name": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "user_transactions": {
      ".read": "root.child('admin').child(auth.uid).exists()",
      ".write": "root.child('admin').child(auth.uid).exists()",
      "$uid": {
        ".read": "$uid === auth.uid",
        ".indexOn": ["timestamp"]
      }
    }
  }
}
